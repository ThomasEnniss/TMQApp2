<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kit305.tmqapp.dashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" >

        <RelativeLayout
            android:id="@+id/activity_new_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <TextView
                android:id="@+id/page_title"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerInParent="false"
                android:paddingTop="10dp"
                android:text="@string/title_activity_edit_task"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_below="@id/page_title"
                android:width="120dp"
                android:text="Task Name" />

            <TextView
                android:id="@+id/codeLabel"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_below="@id/nameLabel"
                android:width="120dp"
                android:text="Unit Code" />

            <DatePicker
                android:id="@+id/selectedEditDate"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:datePickerMode="spinner"
                tools:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:layout_below="@+id/codeText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/urgentLabel"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_below="@id/selectedEditDate"
                android:width="120dp"
                android:text="Urgent?" />



            <TextView
                android:id="@+id/importantLabel"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_below="@+id/urgentLabel"
                android:width="120dp"
                android:text="Important?" />

            <TextView
                android:id="@+id/commentLabel"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_below="@+id/importantLabel"
                android:width="120dp"
                android:text="Comments:" />

            <EditText
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingRight="10dp"
                android:layout_below="@+id/page_title"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/nameLabel"
                android:ems="8"
                android:inputType="textPersonName"
                android:layout_toRightOf="@+id/nameLabel"
                android:layout_toEndOf="@+id/nameLabel" />


            <EditText
                android:id="@+id/codeText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/codeLabel"
                android:ems="8"
                android:inputType="textPersonName"
                android:layout_toRightOf="@+id/nameLabel"
                android:layout_toEndOf="@+id/nameLabel"
                android:layout_below="@+id/nameLabel" />



            <Switch
                android:id="@+id/urgentSwitch"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/urgentLabel"
                android:layout_below="@+id/selectedEditDate" />

            <Switch
                android:id="@+id/importantSwitch"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/importantLabel"
                android:layout_below="@+id/urgentLabel" />

            <EditText
                android:id="@+id/commentText"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="35dp"
                android:paddingRight="10dp"
                android:layout_below="@+id/commentLabel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:ems="8"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="33dp"
                android:text="Delete"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="33dp" />

            <Button
                android:id="@+id/updateButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Update"

                android:layout_marginRight="24dp"
                android:layout_marginEnd="24dp"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/deleteButton"
                android:layout_toStartOf="@+id/deleteButton" />

        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="200dp"
        android:layout_height="260dp"
        android:layout_gravity="start"
        android:background="@color/colorPrimaryAccent"
        app:menu="@menu/navigation_menu" />

</android.support.v4.widget.DrawerLayout>