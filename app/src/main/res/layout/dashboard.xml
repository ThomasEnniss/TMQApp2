<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kit305.tmqapp.dashboard">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:paddingTop="25dp"
            android:text="@string/dashboard_first_string"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/progressBar2"
            android:layout_centerHorizontal="true"
            android:text="@string/dashboard_second_string"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/textView12"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="@string/dashboard_fourth_string"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingTop="25dp"
            android:text="@string/dashboard_third_string"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:layout_below="@+id/chart"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="77dp" />


</LinearLayout>
